{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "noImplicitAny": false,
      "outDir": "lib",
      "sourceMap": true,
      "target": "es2017",
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "downlevelIteration": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ]
  }
  